//Unfortunatelly this does not work for typescript.

{
    "plugins": [
        "protractor"
    ],
    "env": {
        "node": true,
        "es6": true,
        "jasmine": true,
        "protractor": true
    },
    "extends": "plugin:protractor/recommended",
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "protractor/correct-chaining":[
            "off"
        ]
    }
}